<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toq"
    tools:context=".Activity_Profile">

    <ImageView
        android:id="@+id/my_image"
        android:layout_marginTop="10dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:src="@drawable/profile_image1"
        android:layout_width="200dp"
        android:layout_marginStart="70dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginStart="35dp"
        android:layout_below="@id/my_image"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/name"/>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/my_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neon_black"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/track"
        android:layout_below="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/track"/>

    <TextView
        android:id="@+id/track_name"
        android:layout_below="@+id/view"
        android:layout_toEndOf="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:text="@string/track_name"/>

    <TextView
        android:id="@+id/country"
        android:layout_below="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/country"/>

    <TextView
        android:id="@+id/country_name"
        android:layout_below="@+id/track"
        android:layout_toEndOf="@+id/country"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:text="@string/country_name"/>

    <TextView
        android:id="@+id/email"
        android:layout_below="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/email"/>

    <TextView
        android:id="@+id/email_add"
        android:layout_below="@+id/country"
        android:layout_toEndOf="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_marginStart="40dp"
        android:textSize="16sp"
        android:text="@string/email_add"/>

    <TextView
        android:id="@+id/phone"
        android:layout_below="@+id/email"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/phone"/>

    <TextView
        android:id="@+id/phone_num"
        android:layout_below="@+id/email"
        android:layout_toEndOf="@+id/phone"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:text="@string/phone_num"/>

    <TextView
        android:id="@+id/slack_handle"
        android:layout_below="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/slack"/>

    <TextView
        android:id="@+id/username"
        android:layout_below="@+id/phone"
        android:layout_toEndOf="@+id/slack_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:text="@string/username"/>

</RelativeLayout>